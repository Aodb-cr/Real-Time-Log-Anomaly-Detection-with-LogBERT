# Copy to .env and edit values as needed

# Core pipeline settings
# Sliding window size (count)
WINDOW_SIZE=100

# Detection
THRESHOLD=0.1
ALERT_ANOMALY_COUNT=2

# Stream source: file | stdin
STREAM_SOURCE=file
LOG_FILE_PATH=data/sample_logs.txt

# Optional: LogBERT model (Hub or local)
LOGBERT_MODEL=bert-base-uncased
# LOGBERT_LOCAL_PATH=/path/to/logbert_checkpoint
# LOGBERT_DEVICE=cpu

# Streamlit specific
STREAMLIT_SERVER_PORT=8501
